package singleton;

//God is only one but is named different by humans, thus singleton pattern is used
class Battery{
	private String name;
	
	//Eager instantiation
	static Battery staticoObj = new Battery();
	
	private Battery() {
	}
	
	public static Battery getInstance() {
		return staticoObj;
	}
	
	public static void setname(String val) {
		staticoObj.name = val;
	}
	
	public static String getname() {
		return staticoObj.name;
	}
	
	//static factory method instead of constructor
	public static Battery rename(String val) {
		staticoObj.name = val;
		return staticoObj;
	}
}

public class Singleton {

	public static void main(String[] args) {
		Battery musicApp = Battery.rename("Java");
		
		Battery yourGod = Battery.getInstance();
		System.out.println(yourGod.getname());
		
		yourGod.rename("Zeus");
		System.out.println(musicApp.getname());
	}

}
